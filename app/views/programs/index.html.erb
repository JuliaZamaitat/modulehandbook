<p id="notice"><%= notice %></p>

<h1>Programs</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Code</th>
      <th scope="col">Mission</th>
      <th scope="col">Degree</th>
      <th scope="col">Ects</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @programs.each do |program| %>
      <tr>
        <td scope="row"><%= program.name %></td>
        <td><%= program.code %></td>
        <td><%= program.mission %></td>
        <td><%= program.degree %></td>
        <td><%= program.ects %></td>
        <td><%= link_to 'Show', program %></td>
        <td><%= link_to 'Edit', edit_program_path(program) %></td>
        <td><%= link_to 'Destroy', program, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

