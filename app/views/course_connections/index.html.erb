<p id="notice"><%= notice %></p>

<h1>Course Connections</h1>

<% if can? :edit, @course_connection %>
<%= link_to 'New Course Connection', new_course_connection_path %>
<% end %>
<br><br>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Parent course code</th>
      <th scope="col">Child course code</th>
      <th scope="col">Required</th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_connections.each do |course_connection| %>
      <tr>
        <td><%= course_connection.parent_course_code %></td>
        <td><%= course_connection.child_course_code %></td>
        <td><%= course_connection.required %></td>
        <td><%= link_to 'Show', course_connection %></td>
        <% if can? :edit, @course_connection %>
        <td><%= link_to 'Edit', edit_course_connection_path(course_connection) %></td>
        <td><%= link_to 'Destroy', course_connection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


